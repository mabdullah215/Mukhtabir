<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile">

    <include layout="@layout/toolbar_layout_centre"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar_layout"
        android:padding="16dp"
        android:id="@+id/profile_layout"
        android:layout_height="wrap_content">


        <FrameLayout
            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_height="120dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120dp"
                android:id="@+id/img_source"
                android:src="@drawable/profile_pic"
                android:layout_height="120dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="right|bottom"
                android:padding="4dp"
                android:src="@drawable/ic_img_add"
                android:layout_height="wrap_content"/>


        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Abdullah Salem"
            android:textSize="18sp"
            android:textColor="#1f1f1f"
            android:fontFamily="@font/nunito_medium"
            android:layout_height="wrap_content"/>


        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/square_corner_grey"
            android:backgroundTint="@color/white"
            android:padding="16sp"
            android:layout_marginTop="24dp"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_medium"
            android:drawablePadding="8dp"
            android:textColor="#1f1f1f"
            android:text="Abdullah Saleem"
            android:drawableLeft="@drawable/ic_user_grey"
            android:layout_height="wrap_content"/>


        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/square_corner_grey"
            android:backgroundTint="@color/white"
            android:padding="16sp"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_medium"
            android:drawablePadding="8dp"
            android:textColor="#1f1f1f"
            android:text="abdullah.saleem@gmail.com"
            android:drawableLeft="@drawable/ic_email"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/square_corner_grey"
            android:backgroundTint="@color/white"
            android:padding="16sp"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_medium"
            android:drawablePadding="8dp"
            android:textColor="#1f1f1f"
            android:text="+963-559-85-4854"
            android:drawableLeft="@drawable/ic_call"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_below="@+id/profile_layout"
        android:padding="16dp"
        android:drawableLeft="@drawable/ic_lock"
        android:background="@color/white"
        android:drawablePadding="12dp"
        android:fontFamily="@font/nunito_medium"
        android:text="Change Password"
        android:layout_marginTop="24dp"
        android:drawableRight="@drawable/ic_path"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_height="wrap_content">

    </TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:background="@color/white"
        android:layout_height="wrap_content">


        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:insetBottom="0dp"
            android:text="Cancel"
            android:textAllCaps="false"
            app:cornerRadius="8dp"
            android:insetTop="0dp"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:textColor="#1f1f1f"
            android:backgroundTint="#ECECEC"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_weight="3"
            android:insetBottom="0dp"
            android:insetTop="0dp"
            android:text="Save Changes"
            app:cornerRadius="8dp"
            android:stateListAnimator="@null"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>




</RelativeLayout>
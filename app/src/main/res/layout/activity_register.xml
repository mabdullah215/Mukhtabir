<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:layoutDirection="rtl"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="80dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_logo"
                android:layout_height="80dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="إنشاء حساب"
                android:layout_marginTop="8dp"
                android:textSize="24sp"
                android:fontFamily="@font/almarai_bold"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="ابدأ رحلتك التعليمية"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                android:fontFamily="@font/almarai_regular"
                android:textColor="#484848"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="24dp"
                android:text="الاسم الكامل"
                android:textColor="@color/black"
                android:fontFamily="@font/almarai_bold"
                android:layout_height="wrap_content"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                app:cardCornerRadius="8dp"
                app:strokeWidth="0dp"
                app:cardElevation="0dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:padding="12dp"
                    android:fontFamily="@font/almarai_regular"
                    android:hint="اسمك"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                android:text="البريد الإلكتروني"
                android:fontFamily="@font/almarai_bold"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                app:cardCornerRadius="8dp"
                app:strokeWidth="0dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:padding="12dp"
                    android:fontFamily="@font/almarai_regular"
                    android:textSize="14sp"
                    android:gravity="end"
                    android:hint="name@example.com"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                android:text="رقم الهاتف"
                android:fontFamily="@font/almarai_bold"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                app:cardCornerRadius="8dp"
                app:strokeWidth="0dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:padding="12dp"
                    android:fontFamily="@font/almarai_regular"
                    android:textSize="14sp"
                    android:gravity="end"
                    android:hint="E-x +9664552322"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                android:text="كلمة المرور"
                android:fontFamily="@font/almarai_bold"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                app:cardCornerRadius="8dp"
                app:strokeWidth="0dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:padding="12dp"
                    android:fontFamily="@font/almarai_regular"
                    android:textSize="14sp"
                    android:hint="أدخل كلمة مرور فريدة"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                android:text="تأكيد كلمة المرور"
                android:fontFamily="@font/almarai_bold"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                app:cardCornerRadius="8dp"
                app:strokeWidth="0dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:padding="12dp"
                    android:fontFamily="@font/almarai_regular"
                    android:textSize="14sp"
                    android:hint="تأكيد كلمة المرور"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.card.MaterialCardView>



            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                app:cornerRadius="8dp"
                android:text="إنشاء حساب"
                android:textSize="16sp"
                android:fontFamily="@font/almarai_bold"
                android:textColor="@color/white"
                android:layout_marginTop="24dp"
                android:insetBottom="0dp"
                android:id="@+id/button_register"
                android:insetTop="0dp"
                android:backgroundTint="@color/colorAccent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:padding="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/almarai_regular"
                android:textColor="@color/black"
                android:text="هل لديك حساب؟ ,تسجيل الدخول"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</RelativeLayout>